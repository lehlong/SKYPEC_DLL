@model SMO.Service.AD.LanguageService
@{
    Model.ViewId = Guid.NewGuid().ToString();
    Model.FormId = Guid.NewGuid().ToString();
}
<div id='@Model.ViewId' class="container-fluid child-content">
    @using (Ajax.BeginForm("DongBo", null, FormDataUtils.GetAjaxOptions(Model.ViewId), new { @id = Model.FormId }))
    {
        @Html.AntiForgeryToken()

        <div class="card">
            <div class="body" style="padding-top: 0px;">
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a style="padding-left:0px"><i class="material-icons">clear_all</i> ĐỒNG BỘ NGÔN NGỮ</a></li>
                </ul>

                <div class="tab-content">
                    <div class="page-function">
                        <div class="page-function-button m-r-20">
                            @Html.MyButton("cmdBack", "Quay lại", string.Format("Forms.Close('{0}');", @Model.ViewId), "Alt+N", "arrow_back")
                            @Html.MyButton("cmdSave", "Đồng bộ", string.Format("Forms.SubmitForm('{0}');", @Model.FormId), "Alt+N", "sync")
                        </div>
                    </div>

                    <div class="row m-t-20">
                        <div class="col-xs-1"></div>
                        <div class="col-lg-4 col-xs-5">
                            <label>Ngôn ngữ gốc</label>
                            <div class="form-group">
                                @Html.MyDropDownListFor(m => m.LangSource, SelectListUtilities.GetDictionary(Domain.LANG.ToString(), true, false), new { @class = "selectpicker show-tick" })
                            </div>
                        </div>

                        <div class="col-lg-4 col-xs-5">
                            <label>Ngôn ngữ đích</label>
                            <div class="form-group">
                                @Html.MyDropDownListFor(m => m.LangDestination, SelectListUtilities.GetDictionary(Domain.LANG.ToString(), true, false), new { @class = "selectpicker show-tick" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <script type="text/javascript">
        $(function () {
            Forms.CompleteUI();
        });
    </script>
</div>



