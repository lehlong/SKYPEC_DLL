@model SMO.Service.AD.UserService
@{
    Model.ViewId = Guid.NewGuid().ToString();
    Model.FormId = Guid.NewGuid().ToString();
}
<div id='@Model.ViewId'>
    @using (Ajax.BeginForm("CreateUserOrganzie", null, FormDataUtils.GetAjaxOptions(Model.ViewId), new { @id = Model.FormId }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.ObjDetail.ORGANIZE_CODE, new { @id="hddParentInCreate"})
        <div class="card border-grey">
            <div class="body" style="padding-top: 0px;">
                <span class="page-header-icon" onclick="Forms.CloseRightContent();" style="float:right;">
                    <i class="material-icons">arrow_forward</i>
                </span>
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active">
                        <a style="padding-left:0px"><i class="material-icons col-fecon">add</i> TẠO MỚI NGƯỜI DÙNG</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="page-function">
                        <div class="page-function-button m-r-20">
                            @Html.MyButton("cmdSave", "Lưu lại", string.Format("Forms.SubmitForm('{0}');", @Model.FormId), "Alt+N", "done_all")
                        </div>
                    </div>

                    <div class="row m-t-20">
                        <div class="col-xs-12">
                            <label>Tên đăng nhập</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.USER_NAME)
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.USER_NAME)
                            </div>

                            <label>Tài khoản AD</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.ACCOUNT_AD)
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.ACCOUNT_AD)
                            </div>

                            <label>Họ và tên</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.FULL_NAME)
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.FULL_NAME)
                            </div>

                            <label>Email</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.EMAIL)
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.EMAIL)
                            </div>

                            <label>Số điện thoại</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.PHONE)
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.PHONE)
                            </div>

                            <label>Tên chức danh</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.TITLE)
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.TITLE)
                            </div>

                            <label>Ghi chú</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.NOTES)
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.NOTES)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <script type="text/javascript">
        $(function () {
            Forms.CompleteUI();
        });
    </script>
</div>

