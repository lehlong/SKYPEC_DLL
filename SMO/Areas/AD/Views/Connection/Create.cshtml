@model SMO.Service.AD.ConnectionService
@{
    Model.ViewId = Guid.NewGuid().ToString();
    Model.FormId = Guid.NewGuid().ToString();
}
<div id='@Model.ViewId' class="container-fluid child-content">
    @using (Ajax.BeginForm("Create", null, FormDataUtils.GetAjaxOptions(Model.ViewId), new { @id = Model.FormId }))
    {
        @Html.AntiForgeryToken()
        <div class="card">
            <div class="body" style="padding-top: 0px;">
                <span class="page-header-icon" onclick="Forms.CloseRightContent();" style="float:right;">
                    <i class="material-icons">arrow_forward</i>
                </span>
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active">
                        <a style="padding-left:0px"><i class="material-icons">clear_all</i> TẠO MỚI CONNECTION</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="page-function">
                        <div class="page-function-button m-r-20">
                            @Html.MyButton("cmdSave", "Lưu lại", string.Format("Forms.SubmitForm('{0}');", @Model.FormId), "Alt+N", "done_all")
                        </div>
                    </div>

                    <div class="row m-t-20">
                        <div class="col-xs-12">
                            <label>Tên</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.NAME)
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.NAME)
                            </div>

                            <label>Thư mục chứa file</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.DIRECTORY)
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.DIRECTORY)
                            </div>

                            <label>Ghi chú</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.NOTES)
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.NOTES)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    }
    <script type="text/javascript">
        $(function () {
            Forms.CompleteUI();
        });
    </script>
</div>
