@model SMO.Service.WF.WorkFlowService
@{
    Model.ViewId = Guid.NewGuid().ToString();
    Model.FormId = Guid.NewGuid().ToString();
}
<div id='@Model.ViewId'>
    @using (Ajax.BeginForm("CreateActivity", null, FormDataUtils.GetAjaxOptions(Model.ViewId), new { @id = Model.FormId }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.ObjActivity.PROCESS_CODE)
        <div class="card">
            <div class="body"  style="padding-top: 0px;">
                <span class="page-header-icon" onclick="Forms.CloseRightContent();" style="float:right;">
                    <i class="material-icons">arrow_forward</i>
                </span>

                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active">
                        <a style="padding-left:0px"><i class="material-icons">add</i> TẠO MỚI ACTIVITY</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="page-function">
                        <div class="page-function-button m-r-20">
                            @Html.MyButton("cmdSave", "Lưu lại", string.Format("Forms.SubmitForm('{0}');", @Model.FormId), "Alt+N", "done_all")
                        </div>
                    </div>

                    <div class="row m-t-20">
                        <div class="col-xs-12">
                            <label>Mã activity</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjActivity.CODE)
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjActivity.CODE)
                            </div>

                            <label>Tên activity</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjActivity.NAME)
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjActivity.NAME)
                            </div>

                            <label>Thứ tự</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjActivity.C_ORDER)
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjActivity.C_ORDER)
                            </div>
                        </div>

                    </div>
                </div>
                
            </div>
        </div>
    }
    <script type="text/javascript">
        $(function () {
            Forms.CompleteUI();
        });
    </script>
</div>



