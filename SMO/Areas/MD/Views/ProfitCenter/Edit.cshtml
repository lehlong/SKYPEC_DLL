@model SMO.Service.MD.ProfitCenterService
@{
    Model.ViewId = Guid.NewGuid().ToString();
    Model.FormId = Guid.NewGuid().ToString();
}

<div id='@Model.ViewId'>
    @using (Ajax.BeginForm("Update", null, FormDataUtils.GetAjaxOptions(Model.ViewId), new { @id = Model.FormId }))
    {
        @Html.AntiForgeryToken();
        @Html.HiddenFor(m => m.ObjDetail.CODE)
        <div class="card border-grey">
            <div class="body" style="padding-top: 0px;">
                <span class="page-header-icon" onclick="Forms.CloseRightContent();" style="float:right;">
                    <i class="material-icons">arrow_forward</i>
                </span>
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active">
                        <a style="padding-left:0px"><i class="material-icons col-fecon">clear_all</i> CHỈNH SỬA LOẠI GÓI THẦU</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="page-function">
                        <div class="page-function-button m-r-20">
                            @Html.MyButton("cmdSave", "Lưu lại", string.Format("Forms.SubmitForm('{0}');", @Model.FormId), "Alt+N", "done_all")
                        </div>
                    </div>

                    <div class="row m-t-20">
                        <div class="col-xs-12">
                            <div class="col-xs-12">
                                <label>Mã</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        @Html.MyTextBoxFor(m => m.ObjDetail.CODE, new { @disabled = "" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12">
                                <label>Tên</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        @Html.MyTextBoxFor(m => m.ObjDetail.NAME)
                                    </div>
                                    @Html.ValidationMessageFor(m => m.ObjDetail.NAME)
                                </div>
                            </div>

                            <div class="col-xs-12">
                                <label>Công ty</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        @Html.MyTextBoxFor(m => m.ObjDetail.COMPANY_CODE)
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12">
                                <label>Dự án</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        @Html.MyTextBoxFor(m => m.ObjDetail.PROJECT_CODE)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    }
    <script type="text/javascript">
        $(function () {
            Forms.CompleteUI();
        });
    </script>
</div>

