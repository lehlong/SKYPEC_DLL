@model SMO.Service.MD.CostPLElementService
@{
    Model.ViewId = Guid.NewGuid().ToString();
    Model.FormId = Guid.NewGuid().ToString();
}
    <div id='@Model.ViewId'>
        @using (Ajax.BeginForm("Update", null, FormDataUtils.GetAjaxOptions(Model.ViewId), new { @id = Model.FormId }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.ObjDetail.CODE);
            @Html.HiddenFor(m => m.ObjDetail.ACTIVE);
            @Html.HiddenFor(m => m.ObjDetail.IS_GROUP);
            @Html.HiddenFor(m => m.ObjDetail.PARENT_CODE);
            @Html.HiddenFor(m => m.ObjDetail.C_ORDER);
            @Html.HiddenFor(m => m.ObjDetail.TIME_YEAR);

            <div class="card">
                <div class="body" style="padding-top: 0px;">
                    <span class="page-header-icon" onclick="Forms.CloseRightContent();" style="float:right;">
                        <i class="material-icons">arrow_forward</i>
                    </span>
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active">
                            <a style="padding-left:0px"><i class="material-icons col-fecon">edit</i> CHỈNH SỬA NHÓM KHOẢN MỤC</a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div class="page-function">
                            <div class="page-function-button m-r-20">
                                @Html.MyButton("cmdSave", "Lưu lại", string.Format("Forms.SubmitForm('{0}');", @Model.FormId), "Alt+N", "done_all")
                                @Html.MyButton("cmdDelete", "Xóa", $"Delete('{Model.ObjDetail.CODE}', {Model.ObjDetail.TIME_YEAR});", "Alt+N", "delete")
                            </div>
                        </div>

                        <div class="row m-t-20">
                            <div class="col-xs-12">
                                <div class="col-xs-12">
                                    <label>Mã nhóm</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            @Html.MyTextBoxFor(m => m.ObjDetail.CODE, new { @disabled = "" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-12">
                                    <label>Tên nhóm</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            @Html.MyTextBoxFor(m => m.ObjDetail.NAME)
                                        </div>
                                        @Html.ValidationMessageFor(m => m.ObjDetail.NAME)
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
        <script type="text/javascript">
        function Delete(code, year) {
            if (confirm("Bạn có chắc chắn xóa nhóm khoản mục này không?")) {
                var ajaxParams = {
                    url: '@Url.Action("Delete")',
                    type: "POST",
                    data: { code, year },
                    dataType: 'json',
                    success: function (response) {
                        if (response.State == true) {
                            Forms.CloseRightContent();
                        }
                        Message.execute(response);
                    }
                };
                Forms.Ajax(ajaxParams);
            }
        }

        $(function () {
            Forms.CompleteUI();
        });
        </script>
    </div>


