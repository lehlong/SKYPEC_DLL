        if (!confirm("Bạn chắc chắn chuyển Tổng kiếm soát không?")) {
            return;
        }

        var ajaxParams = {
            url: '@Url.Action("ChuyenTKS", controllerName)',
            type: 'POST',
            dataType: 'JSON',
            data: { code: code },
            success: refreshBtn
        };
        Forms.Ajax(ajaxParams);
