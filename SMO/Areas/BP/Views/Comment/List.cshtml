@model IEnumerable<SMO.Core.Entities.T_CM_COMMENT>
@using SMO.Core.Entities.BP.REVENUE_PL;
@{
    var header = ViewBag.Header as T_BP_REVENUE_PL_REVIEW_COMMENT;
}
@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="row-comment">
            <label>@item.USER_CREATE.FULL_NAME</label>
            <div class="comment-time">
                <span>@item.CREATE_DATE.Value.ToString("dd/MM/yyyy HH:mm:ss")</span>
                @if (header != null)
                {
                    <br>
                    <span>Version: @header.DATA_VERSION</span>
                }
            </div>
            <br />
            <span class="comment-content">@item.CONTENTS</span>
        </div>
    }
}
<script type="text/javascript">
    $(function () {
        $(".comment-content").each(function (index) {
            $(this).html($(this).html().replace(/((http|https|ftp):\/\/[\w?=&.\/-;#~%-]+(?![\w\s?&.\/;#~%"=-]*>))/g, '<a target="_blank" href="$1">$1</a> '));
        });
        return
    });
</script>

